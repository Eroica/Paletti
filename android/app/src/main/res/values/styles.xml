<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#4EA7FC</item>
		<item name="colorSecondary">#2161DC</item>
		<item name="colorSurface">#25292C</item>
		<item name="colorOnPrimary">#FFFFFF</item>
		<item name="colorOnSecondary">#FFFFFF</item>
		<item name="colorOnSurface">#FFFFFF</item>

		<item name="colorControlNormal">#F9FAFE</item>
		<item name="colorControlActivated">#4EA7FC</item>

		<item name="android:textColorPrimary">#F7FBFE</item>
		<item name="android:textColorSecondary">#CED2D5</item>

		<item name="android:statusBarColor">#000000</item>
		<item name="android:colorBackground">#1D2124</item>

		<item name="sliderStyle">@style/Widget.App.Slider</item>
		<item name="switchStyle">@style/Widget.App.Switch</item>
	</style>

	<style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
		<item name="labelStyle">@style/Widget.App.Tooltip</item>
	</style>

	<style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
		<item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
		<item name="backgroundTint">#161618</item>
	</style>

	<style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
		<item name="track">@drawable/switch_track</item>
		<item name="android:thumb">@drawable/switch_thumb</item>
		<item name="thumbTint">#ffffff</item>
	</style>

	<style name="ToolbarPopup" parent="ThemeOverlay.MaterialComponents.Dark">
<!--		<item name="colorSurface">#27282C</item>-->
	</style>
</resources>
